ARG baseimage=debian:9
FROM $baseimage AS base

RUN apt-get update && \
    apt-get upgrade --no-install-recommends --yes && \
    apt-get install --no-install-recommends --yes \
# build tools and helpers
    python \
    python-setuptools

###########################################################
FROM base AS build

ARG version=1.9.11

LABEL maintainers="Lukas Nellen <lukas@nucleares.unam.mx>" \
      name="MoinMoin stand-alone servers" 

RUN apt-get install --no-install-recommends --yes \
# build tools and helpers
    python-pip \
    python-wheel \
  && \
# cleanup
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY moinmoin/moin-${version}.tar.gz /

RUN pip install --prefix=/opt moin-${version}.tar.gz

#Copy config in container, less to bind mount
COPY moinmoin/moin-config/  /config/moin/
RUN ls -l /config/moin 

###########################################################
FROM base

LABEL maintainers="Lukas Nellen <lukas@nucleares.unam.mx>" \
      name="MoinMoin stand-alone servers" 

RUN apt-get install --no-install-recommends --yes \
# required system packages
    iproute2 \
# build tools and helpers
    python-docutils \
    python-xapian \
# web runner
    gunicorn \
# debug/test helpers    
    less \
    aptitude \
    procps \
    psmisc \
  && \
# cleanup
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY --from=build /opt /opt
RUN mkdir /config

ENV PYTHONPATH=/opt/lib/python2.7/site-packages:/config/moin \
 PATH=/opt/bin:${PATH}

EXPOSE 8080

COPY moinmoin/entrypoint.sh /

ENTRYPOINT [ "/entrypoint.sh" ]
